---
import IndexLayout from '../layouts/IndexLayout.astro'
import StoryContent from '../components/StoryContent.vue'
import EndlessIndicator from '../components/EndlessIndicator.astro'
import AppOverview from '../components/AppOverview.astro'
import { v4 as uuidv4 } from 'uuid'

const uuid: string = uuidv4()
---

<IndexLayout>
  <div class="container mx-auto p-4">
    <AppOverview />
    <StoryContent uuid={uuid} client:load />
  </div>
  <EndlessIndicator />
</IndexLayout>
